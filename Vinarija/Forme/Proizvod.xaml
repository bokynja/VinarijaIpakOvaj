<Window x:Class="Vinarija.Proizvod"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Proizvod" Height="300" Width="300">
    <Grid>
        <Label Content="Naziv proizvoda:" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top"/>
        <Label Content="Kategorija:" HorizontalAlignment="Left" Margin="30,50,0,0" VerticalAlignment="Top"/>
        <Label Content="Cena:" HorizontalAlignment="Left" Margin="30,80,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNazivProizvoda" HorizontalAlignment="Left" Height="23" Margin="150,20,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbKategorija" HorizontalAlignment="Left" Margin="150,50,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="naziv_kategorije" SelectedValuePath="kategorijaID"/>
        <TextBox x:Name="txtCena" HorizontalAlignment="Left" Height="23" Margin="150,80,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnSacuvaj" Content="Sačuvaj" HorizontalAlignment="Left" Margin="30,140,0,0" VerticalAlignment="Top" Width="75" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkaži" HorizontalAlignment="Left" Margin="180,140,0,0" VerticalAlignment="Top" Width="75" Click="btnOtkazi_Click"/>
    </Grid>
</Window>
